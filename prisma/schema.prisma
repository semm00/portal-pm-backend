generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  supabaseId   String?  @unique
  fullName     String
  username     String   @unique
  email        String   @unique
  passwordHash String?
  emailVerified Boolean @default(false)
  avatarUrl    String?  @db.Text
  bio          String?  @db.Text
  city         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model News {
  id         String   @id @default(cuid())
  imageUrl   String   @db.Text
  title      String
  source     String
  url        String   @db.Text
  createdAt  DateTime @default(now())
}

enum EventStatus {
  PENDING
  APPROVED
}

model Event {
  id          String      @id @default(cuid())
  title       String
  description String?     @db.Text
  category    String
  location    String?
  startDate   DateTime
  endDate     DateTime
  startTime   String?
  endTime     String?
  status      EventStatus @default(PENDING)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}
